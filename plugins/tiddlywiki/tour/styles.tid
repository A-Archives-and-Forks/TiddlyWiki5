.tc-tour-panel {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 310px;
	height: 400px;
	overflow: auto;
	-webkit-overflow-scrolling: touch;
	<<box-shadow "0px 0px 5px rgba(0, 0, 0, 0.3)">>
	box-shadow: inset 0 -40px 40px rgb(0 0 0 / 6%), inset 0 25px 10px rgb(0 0 0 / 9%), 0 5px 6px 5px rgb(0 0 0 / 7%);
	border: 1px solid #ff8;
	background: #ffa;
	border-radius: 0em;
	padding: 1em;
	margin: 0.5em;
	z-index: 1000;
}
